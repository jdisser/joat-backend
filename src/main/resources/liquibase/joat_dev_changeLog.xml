<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="jdisser" context="initialize">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="varchar(50)"/>
            <column name="lastname" type="varchar(50)"/>
            <column name="password" type="varchar(384)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(128)">
            	<constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(32)">
            	<constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(32)">
            	<constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="2" author="jdisser" context="initialize">
        <createTable tableName="property">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address1" type="varchar(128)">
            	<constraints nullable="false"/>
            </column>
            <column name="address2" type="varchar(128)"/>
            <column name="city" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(128)">
            	<constraints nullable="false"/>
            </column>
            <column name="state" type="varchar(32)">
            	<constraints nullable="false"/>
            </column>
            <column name="zip" type="varchar(32)">
            	<constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(32)">
            	<constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>